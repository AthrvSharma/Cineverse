<main class="pt-28 pb-12">
  <section class="container mx-auto px-4 space-y-8" data-dashboard-root>
    <header class="floating-panel p-6 md:p-8 flex flex-col md:flex-row md:items-center md:justify-between gap-6 shine-border" data-animate>
      <div>
        <p class="floating-chip text-xs mb-2">Mission Control</p>
        <h1 class="text-4xl font-black">Operational Dashboard</h1>
        <p class="text-gray-400 max-w-2xl">MongoDB logins, PostgreSQL catalog throughput, Redis cache health, and transport security all beam into this panel so curators can scale confidently.</p>
      </div>
      <div class="flex gap-3">
        <a href="/" class="neon-button px-5 py-3 border border-white/20 rounded-full text-sm font-semibold text-white hover:text-white">Back to catalog</a>
        <button id="refresh-dashboard" class="neon-button px-5 py-3 bg-gradient-to-r from-sky-500 to-indigo-500 text-white rounded-full font-semibold shadow-lg shadow-sky-500/30">Refresh now</button>
      </div>
    </header>

    <section class="grid gap-4 md:grid-cols-2 xl:grid-cols-4" id="auth-metrics" data-animate>
      <!-- populated by realtime-dashboard.js -->
    </section>

    <section class="grid gap-6 lg:grid-cols-3" data-animate>
      <div class="glass-card p-6 lg:col-span-2 chart-card">
        <div class="flex items-center justify-between mb-2">
          <div>
            <p class="floating-chip text-xs">Realtime traffic</p>
            <h2 class="text-2xl font-semibold mt-2">Content throughput & audience pulse</h2>
          </div>
          <span class="text-sm text-gray-400" id="chart-updated">Awaiting signal</span>
        </div>
        <div class="chart-canvas-wrapper">
          <canvas id="throughput-chart"></canvas>
        </div>
      </div>
      <div class="glass-card p-6 chart-card">
        <p class="floating-chip text-xs">Audience palette</p>
        <h2 class="text-2xl font-semibold mt-2">Genre distribution</h2>
        <div class="chart-canvas-wrapper">
          <canvas id="db-health-chart" class="mt-6"></canvas>
        </div>
        <ul class="mt-4 space-y-2 text-sm text-gray-300" id="db-health-legend"></ul>
        <ul class="mt-2 space-y-2 text-sm text-gray-300" id="genre-legend"></ul>
      </div>
    </section>

    <section class="grid gap-6 lg:grid-cols-3" id="catalog-panels" data-animate>
      <div class="bg-gray-900/70 rounded-2xl p-6 border border-gray-800 lg:col-span-2">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-semibold">Catalog overview</h2>
          <span class="text-xs uppercase tracking-wide text-gray-400">Realtime movie data</span>
        </div>
        <div class="grid md:grid-cols-2 gap-4" id="catalog-overview"></div>
      </div>
      <div class="bg-gray-900/70 rounded-2xl p-6 border border-gray-800">
        <h2 class="text-2xl font-semibold mb-3">Audience highlights</h2>
        <div id="audience-panel" class="space-y-3 text-sm text-gray-300"></div>
        <div id="security-panel" class="mt-5 space-y-2 text-sm text-gray-400"></div>
      </div>
    </section>

    <section class="bg-gray-900/70 rounded-2xl p-6 border border-gray-800" data-animate>
      <div class="flex items-center justify-between mb-4">
        <div>
          <h2 class="text-2xl font-semibold">Movie Analytics</h2>
          <p class="text-gray-400 text-sm">Powered by PostgreSQL snapshots with Redis acceleration.</p>
        </div>
        <div class="text-right">
          <p class="text-3xl font-black" id="total-movies">0</p>
          <p class="text-xs uppercase tracking-widest text-gray-400">Total titles</p>
        </div>
      </div>
      <div class="grid md:grid-cols-3 gap-4">
        <div class="p-4 rounded-xl bg-gray-800/60 border border-gray-700">
          <p class="text-gray-400 text-sm uppercase">Average Rating</p>
          <p class="text-4xl font-black" id="avg-rating">0</p>
        </div>
        <div class="p-4 rounded-xl bg-gray-800/60 border border-gray-700">
          <p class="text-gray-400 text-sm uppercase">Registered Users</p>
          <p class="text-4xl font-black" id="user-count">0</p>
        </div>
        <div class="p-4 rounded-xl bg-gray-800/60 border border-gray-700">
          <p class="text-gray-400 text-sm uppercase">Tracked Genres</p>
          <p class="text-4xl font-black" id="genre-count">0</p>
        </div>
      </div>
      <div class="mt-6">
        <h3 class="text-lg font-semibold mb-2">Genre distribution</h3>
        <div id="genre-list" class="flex flex-wrap gap-2 text-sm"></div>
      </div>
    </section>
  </section>
</main>
