  <section class="dashboard-header" data-dashboard-root data-animate>
    <div>
      <p class="hero__badge">Mission control</p>
      <h1 class="section-title" style="margin-top: 0.5rem;">Operational dashboard</h1>
      <p class="section-description">MongoDB Atlas (users + catalog), Redis cache health, and TLS posture all converge here so you can publish with confidence.</p>
    </div>
    <div class="hero__actions">
      <a class="btn btn-ghost" href="/">Back to catalog</a>
      <button class="btn btn-accent" id="refresh-dashboard" type="button">Refresh data</button>
    </div>
  </section>

  <section class="dashboard-panels" id="auth-metrics" style="margin-top: 2rem;" data-animate></section>

  <section class="dashboard-grid" style="margin-top: 2rem; grid-template-columns: 2fr 1fr; gap: 1.5rem;" data-animate>
    <div class="chart-wrap chart-wrap--line">
      <div class="section-header">
        <div>
          <h2 class="section-title" style="font-size: 1.5rem;">Audience pulse</h2>
          <p class="section-description">Catalog size, sessions, and rating trends.</p>
        </div>
        <span class="helper-text" id="chart-updated">Awaiting signal</span>
      </div>
      <canvas id="throughput-chart"></canvas>
    </div>
    <div class="chart-stack">
      <div class="chart-wrap chart-wrap--pie">
        <div class="section-header">
          <div>
            <h2 class="section-title" style="font-size: 1.25rem;">Pie chart 1</h2>
            <p class="section-description">Hooked to genre distribution.</p>
          </div>
        </div>
        <canvas id="db-health-chart"></canvas>
        <div class="helper-text" id="db-health-legend" style="margin-top: 1rem;"></div>
        <div class="helper-text" id="genre-legend"></div>
      </div>
      <div class="chart-wrap chart-wrap--ghost">
        <div class="section-header">
          <div>
            <h2 class="section-title" style="font-size: 1.25rem;">Pie chart 2</h2>
            <p class="section-description">Awaiting your metrics.</p>
          </div>
        </div>
        <div class="chart-placeholder">
          <span>Ready when you are.</span>
        </div>
      </div>
    </div>
  </section>

  <section class="dashboard-grid" style="margin-top: 2rem; grid-template-columns: 2fr 1fr; gap: 1.5rem;" data-animate>
    <div class="card" id="catalog-overview"></div>
    <div class="card">
      <h3 style="margin-top: 0;">Audience + security</h3>
      <div id="audience-panel" class="helper-text" style="margin-top: 0.75rem;"></div>
      <div id="security-panel" class="helper-text" style="margin-top: 1.25rem;"></div>
    </div>
  </section>

  <section class="card" style="margin-top: 2rem;" data-animate>
    <div class="section-header" style="margin-bottom: 1.5rem;">
      <div>
        <h2 class="section-title" style="font-size: 1.6rem;">Movie analytics</h2>
        <p class="section-description">Snapshots pulled from MongoDB Atlas and cached with Redis.</p>
      </div>
      <div style="text-align: right;">
        <strong id="total-movies" style="font-size: 2.4rem; display: block;">0</strong>
        <span class="helper-text">Total titles</span>
      </div>
    </div>
    <div class="stat-grid">
      <article class="stat-card">
        <span>Average rating</span>
        <strong id="avg-rating">0.0</strong>
      </article>
      <article class="stat-card">
        <span>Registered users</span>
        <strong id="user-count">0</strong>
      </article>
      <article class="stat-card">
        <span>Tracked genres</span>
        <strong id="genre-count">0</strong>
      </article>
    </div>
    <div style="margin-top: 1.5rem;">
      <h3 style="margin: 0 0 0.75rem;">Genres in catalog</h3>
      <div id="genre-list" class="filter-bar" style="margin-top: 0;"></div>
    </div>
  </section>
